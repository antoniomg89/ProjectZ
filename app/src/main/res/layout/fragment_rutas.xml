<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ofertasRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmentsbackground">
    <!--
    -->

    <LinearLayout
        android:id="@+id/linearlayoutRecyclerOfertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/negro">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageButton
                android:id="@+id/imageButtonLocalizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:background="@color/transparente"
                app:srcCompat="@drawable/iconubicacion25" />

            <ImageButton
                android:id="@+id/imageButtonFiltro"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:paddingBottom="5dp"
                android:background="@color/transparente"
                android:backgroundTint="@color/blanco_gris"
                app:srcCompat="@drawable/iconfiltro25" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarFragmentRutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progressbar"
        android:indeterminateDuration="1500" />

    <TextView
        android:id="@+id/textViewFragmentRutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textSize="19sp"
        android:textColor="@color/blanco_gris"
        android:visibility="gone"
        android:background="@drawable/shape_overlay_rectangle"
        android:fontFamily="@font/poppinssemibold"
        android:text="Prueba a hacer otra bÃºsqueda"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFragmentOfertas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:visibility="gone"/>

</RelativeLayout>